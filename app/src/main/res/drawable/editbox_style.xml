<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false">
        <shape>
            <stroke
                android:width="3dp"
                android:color="#94BAF3" />

            <padding
                android:bottom="14dp"
                android:left="15dp"
                android:right="15dp"
                android:top="14dp" />
            <corners
                android:radius="33dp"
                />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <stroke
                android:width="3dp"
                android:color="#3082FD" />

            <padding
                android:bottom="14dp"
                android:left="15dp"
                android:right="15dp"
                android:top="14dp" />
            <corners
                android:radius="33dp"
                />
        </shape>
    </item>
</selector>