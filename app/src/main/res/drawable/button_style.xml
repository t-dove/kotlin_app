<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_hovered="false">
        <shape>
            <stroke
                android:width="3dp"
                android:color="#94BAF3" />

            <padding
                android:left="22dp"
                android:right="22dp" />
            <corners
                android:radius="40dp"
                />
            <solid
                android:color="#94BAF3"
                />
        </shape>
    </item>
    <item android:state_hovered="true">
        <shape>
            <stroke
                android:width="3dp"
                android:color="#94BAF3" />

            <padding
                android:left="22dp"
                android:right="22dp" />
            <corners
                android:radius="40dp"
                />
            <solid
                android:color="#94BAF3"
                />
        </shape>
    </item>
</selector>